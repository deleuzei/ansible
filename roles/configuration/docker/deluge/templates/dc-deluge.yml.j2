version: "2.1"
services:
  deluge:
    image: lscr.io/linuxserver/deluge
    container_name: deluge
    environment:
      - PUID={{ deluge_puid }}
      - PGID={{ deluge_pgid }}
      - TZ={{ deluge_tz }}
      - DELUGE_LOGLEVEL=error #optional
    volumes:
      - {{ deluge_config }}:/config
      - {{ deluge_download_dir }}:/downloads
    ports:
      - 8112:8112
      - 6881:6881
      - 6881:6881/udp
    restart: unless-stopped
